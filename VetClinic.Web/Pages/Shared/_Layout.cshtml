<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetClinic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VetClinic.Web.styles.css" asp-append-version="true" />
    <style>
        /* Fix dropdown appearing behind table */
        .table-responsive {
            overflow: visible !important;
        }
        .card .table-responsive {
            overflow-x: auto !important;
            overflow-y: visible !important;
        }
        .dropdown-menu {
            z-index: 1050 !important;
            position: absolute !important;
        }
        
        /* Sidebar styling */
        .sidebar {
            min-height: calc(100vh - 56px);
            background: linear-gradient(180deg, #2c3e50 0%, #3498db 100%);
        }
        .sidebar .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            margin: 0.25rem 0.5rem;
            transition: all 0.2s;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            color: white;
            background: rgba(255,255,255,0.15);
        }
        .sidebar .nav-link i {
            width: 24px;
            margin-right: 0.5rem;
        }
        .main-content {
            background-color: #f8f9fa;
            min-height: calc(100vh - 56px);
        }
        
        /* Card improvements */
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .card-header {
            background-color: white;
            border-bottom: 1px solid rgba(0,0,0,0.1);
        }
        
        /* Badge improvements */
        .badge {
            font-weight: 500;
        }
        
        /* Stats cards */
        .stats-card {
            transition: transform 0.2s;
        }
        .stats-card:hover {
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-page="/Index">
                <i class="bi bi-heart-pulse-fill me-2"></i>
                <span>VetClinic</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                    aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">
                            <i class="bi bi-speedometer2 me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-heart-fill me-1"></i>Pets
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/Pets/Index"><i class="bi bi-list-ul me-2"></i>All Pets</a></li>
                            <li><a class="dropdown-item" asp-page="/Pets/Create"><i class="bi bi-plus-circle me-2"></i>Add New Pet</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-page="/Pets/Index" asp-route-isAdopted="false"><i class="bi bi-heart me-2"></i>Available for Adoption</a></li>
                            <li><a class="dropdown-item" asp-page="/Pets/Index" asp-route-isAdopted="true"><i class="bi bi-check-circle me-2"></i>Adopted Pets</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-people-fill me-1"></i>Owners
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/Owners/Index"><i class="bi bi-list-ul me-2"></i>All Owners</a></li>
                            <li><a class="dropdown-item" asp-page="/Owners/Create"><i class="bi bi-person-plus me-2"></i>Add New Owner</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-calendar-event me-1"></i>Appointments
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/Appointments/Index"><i class="bi bi-list-ul me-2"></i>All Appointments</a></li>
                            <li><a class="dropdown-item" asp-page="/Appointments/Create"><i class="bi bi-calendar-plus me-2"></i>Schedule Appointment</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-clipboard2-pulse me-1"></i>Medical
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/MedicalRecords/Index"><i class="bi bi-list-ul me-2"></i>All Records</a></li>
                            <li><a class="dropdown-item" asp-page="/MedicalRecords/Create"><i class="bi bi-plus-circle me-2"></i>Add Record</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <span class="nav-link text-light">
                            <i class="bi bi-calendar3 me-1"></i>@DateTime.Now.ToString("MMM dd, yyyy")
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar (visible on large screens) -->
            <nav class="col-lg-2 d-none d-lg-block sidebar py-3">
                <div class="position-sticky" style="top: 70px;">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "active" : "")" asp-page="/Index">
                                <i class="bi bi-speedometer2"></i>Dashboard
                            </a>
                        </li>
                    </ul>
                    <h6 class="text-uppercase text-white-50 px-3 mt-4 mb-2" style="font-size: 0.75rem;">Management</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Pets") == true ? "active" : "")" asp-page="/Pets/Index">
                                <i class="bi bi-heart-fill"></i>Pets
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Owners") == true ? "active" : "")" asp-page="/Owners/Index">
                                <i class="bi bi-people-fill"></i>Owners
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Appointments") == true ? "active" : "")" asp-page="/Appointments/Index">
                                <i class="bi bi-calendar-event"></i>Appointments
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/MedicalRecords") == true ? "active" : "")" asp-page="/MedicalRecords/Index">
                                <i class="bi bi-clipboard2-pulse"></i>Medical Records
                            </a>
                        </li>
                    </ul>
                    <h6 class="text-uppercase text-white-50 px-3 mt-4 mb-2" style="font-size: 0.75rem;">Quick Actions</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Pets/Create">
                                <i class="bi bi-plus-circle"></i>Add Pet
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Owners/Create">
                                <i class="bi bi-person-plus"></i>Add Owner
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Appointments/Create">
                                <i class="bi bi-calendar-plus"></i>New Appointment
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/MedicalRecords/Create">
                                <i class="bi bi-clipboard2-plus"></i>Add Medical Record
                            </a>
                        </li>
                    </ul>
                    <hr class="text-white-50 mx-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Pets/Index" asp-route-isAdopted="false">
                                <i class="bi bi-heart"></i>Adoptions
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-lg-10 ms-sm-auto px-4 py-4 main-content">
                <!-- Success/Error Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-dark text-light py-3 mt-auto">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <span>&copy; @DateTime.Now.Year VetClinic - Pet Management System</span>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
