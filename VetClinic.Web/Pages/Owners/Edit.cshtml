@page "{id:int}"
@model VetClinic.Web.Pages.Owners.EditModel
@{
    ViewData["Title"] = $"Edit {Model.Owner?.FirstName}";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="Index">Owners</a></li>
            <li class="breadcrumb-item"><a asp-page="Details" asp-route-id="@Model.Owner?.Id">@Model.Owner?.FirstName @Model.Owner?.LastName</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Owner</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Owner.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Owner.FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                                <input asp-for="Owner.FirstName" class="form-control" />
                                <span asp-validation-for="Owner.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Owner.LastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                                <input asp-for="Owner.LastName" class="form-control" />
                                <span asp-validation-for="Owner.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Owner.Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Owner.Email" type="email" class="form-control" />
                                <span asp-validation-for="Owner.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Owner.Phone" class="form-label">Phone <span class="text-danger">*</span></label>
                                <input asp-for="Owner.Phone" class="form-control" />
                                <span asp-validation-for="Owner.Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Owner.Address" class="form-label">Address</label>
                            <textarea asp-for="Owner.Address" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle me-1"></i>Save Changes
                            </button>
                            <a asp-page="Details" asp-route-id="@Model.Owner?.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}