@page
@model VetClinic.Web.Pages.MedicalRecords.IndexModel
@{
    ViewData["Title"] = "Medical Records";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-clipboard2-pulse text-danger me-2"></i>Medical Records</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Add Medical Record
        </a>
    </div>

    <!-- Search/Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" 
                           placeholder="Search by pet name, diagnosis...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">From Date</label>
                    <input type="date" name="fromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">To Date</label>
                    <input type="date" name="toDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")" class="form-control">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="bi bi-search me-1"></i>Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Records Table -->
    <div class="card shadow">
        <div class="card-body">
            @if (!Model.MedicalRecords.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-clipboard2-x fs-1 text-muted"></i>
                    <p class="text-muted mt-2">No medical records found.</p>
                    <a asp-page="Create" class="btn btn-primary">Add First Record</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Visit Date</th>
                                <th>Pet</th>
                                <th>Owner</th>
                                <th>Diagnosis</th>
                                <th>Treatment</th>
                                <th>Cost</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.MedicalRecords)
                            {
                                <tr>
                                    <td>
                                        <strong>@record.VisitDate.ToString("MMM dd, yyyy")</strong>
                                    </td>
                                    <td>
                                        <a asp-page="/Pets/Details" asp-route-id="@record.Pet.Id">
                                            @record.Pet.Name
                                        </a>
                                        <br><small class="text-muted">@record.Pet.Species</small>
                                    </td>
                                    <td>@(record.Pet.Owner?.FullName ?? "N/A")</td>
                                    <td>
                                        <span title="@record.Diagnosis">
                                            @(record.Diagnosis.Length > 40 ? record.Diagnosis.Substring(0, 40) + "..." : record.Diagnosis)
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(record.Treatment))
                                        {
                                            <span title="@record.Treatment">
                                                @(record.Treatment.Length > 30 ? record.Treatment.Substring(0, 30) + "..." : record.Treatment)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (record.Cost.HasValue)
                                        {
                                            <span class="text-success fw-bold">$@record.Cost.Value.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-page="Details" asp-route-id="@record.Id" class="btn btn-outline-primary" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="Edit" asp-route-id="@record.Id" class="btn btn-outline-secondary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" title="Delete"
                                                    data-bs-toggle="modal" data-bs-target="#deleteModal-@record.Id">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>

                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal-@record.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete this medical record for <strong>@record.Pet.Name</strong> 
                                                        from <strong>@record.VisitDate.ToString("MMM dd, yyyy")</strong>?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form method="post" asp-page-handler="Delete" asp-route-id="@record.Id">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>