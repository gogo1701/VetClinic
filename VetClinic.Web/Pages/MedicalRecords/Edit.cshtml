@page "{id:int}"
@model VetClinic.Web.Pages.MedicalRecords.EditModel
@{
    ViewData["Title"] = "Edit Medical Record";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="Index">Medical Records</a></li>
            <li class="breadcrumb-item"><a asp-page="Details" asp-route-id="@Model.Record.Id">Record #@Model.Record.Id</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Medical Record</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Record.Id" />
                        <input type="hidden" asp-for="Record.PetId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="alert alert-info mb-3">
                            <strong>Patient:</strong> @Model.PetName
                        </div>

                        <div class="mb-3">
                            <label asp-for="Record.VisitDate" class="form-label">Visit Date <span class="text-danger">*</span></label>
                            <input asp-for="Record.VisitDate" type="date" class="form-control" />
                            <span asp-validation-for="Record.VisitDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Record.Diagnosis" class="form-label">Diagnosis <span class="text-danger">*</span></label>
                            <textarea asp-for="Record.Diagnosis" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Record.Diagnosis" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Record.Treatment" class="form-label">Treatment</label>
                            <textarea asp-for="Record.Treatment" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Record.Medications" class="form-label">Medications</label>
                                <textarea asp-for="Record.Medications" class="form-control" rows="2"></textarea>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Record.Cost" class="form-label">Cost</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Record.Cost" type="number" step="0.01" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Record.VetNotes" class="form-label">Veterinarian Notes</label>
                            <textarea asp-for="Record.VetNotes" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle me-1"></i>Save Changes
                            </button>
                            <a asp-page="Details" asp-route-id="@Model.Record.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}