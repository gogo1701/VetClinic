@page "{id:int}"
@model VetClinic.Web.Pages.Pets.AdoptModel
@{
    ViewData["Title"] = $"Adopt {Model.Pet?.Name}";
}

@if (Model.Pet == null)
{
    <div class="alert alert-warning">Pet not found.</div>
}
else if (Model.Pet.IsAdopted)
{
    <div class="alert alert-info">This pet has already been adopted.</div>
    <a asp-page="Index" class="btn btn-primary">Back to Pets</a>
}
else
{
    <div class="container">
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="Index">Pets</a></li>
                <li class="breadcrumb-item"><a asp-page="Details" asp-route-id="@Model.Pet.Id">@Model.Pet.Name</a></li>
                <li class="breadcrumb-item active">Adopt</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="bi bi-heart-fill me-2"></i>Adopt @Model.Pet.Name</h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <h5>Pet Information</h5>
                            <p class="mb-1"><strong>Name:</strong> @Model.Pet.Name</p>
                            <p class="mb-1"><strong>Species:</strong> @Model.Pet.Species</p>
                            <p class="mb-1"><strong>Breed:</strong> @Model.Pet.Breed</p>
                            <p class="mb-0"><strong>Age:</strong> @((DateTime.Today.Year - Model.Pet.DateOfBirth.Year)) years</p>
                        </div>

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <h5 class="mb-3">Select or Create Owner</h5>
                            
                            <ul class="nav nav-tabs mb-3" id="ownerTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="existing-tab" data-bs-toggle="tab" data-bs-target="#existing" type="button">
                                        Existing Owner
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="new-tab" data-bs-toggle="tab" data-bs-target="#new" type="button">
                                        New Owner
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content" id="ownerTabsContent">
                                <div class="tab-pane fade show active" id="existing" role="tabpanel">
                                    <div class="mb-3">
                                        <label asp-for="SelectedOwnerId" class="form-label">Select Owner</label>
                                        <select asp-for="SelectedOwnerId" asp-items="Model.Owners" class="form-select">
                                            <option value="">-- Select an existing owner --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="new" role="tabpanel">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="NewOwner.FirstName" class="form-label">First Name</label>
                                            <input asp-for="NewOwner.FirstName" class="form-control" />
                                            <span asp-validation-for="NewOwner.FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="NewOwner.LastName" class="form-label">Last Name</label>
                                            <input asp-for="NewOwner.LastName" class="form-control" />
                                            <span asp-validation-for="NewOwner.LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="NewOwner.Email" class="form-label">Email</label>
                                            <input asp-for="NewOwner.Email" type="email" class="form-control" />
                                            <span asp-validation-for="NewOwner.Email" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="NewOwner.Phone" class="form-label">Phone</label>
                                            <input asp-for="NewOwner.Phone" class="form-control" />
                                            <span asp-validation-for="NewOwner.Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="NewOwner.Address" class="form-label">Address</label>
                                        <textarea asp-for="NewOwner.Address" class="form-control" rows="2"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex gap-2 mt-3">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-heart-fill me-1"></i>Complete Adoption
                                </button>
                                <a asp-page="Details" asp-route-id="@Model.Pet.Id" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}