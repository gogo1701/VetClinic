@page
@model VetClinic.Web.Pages.Pets.CreateModel
@{
    ViewData["Title"] = "Add New Pet";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="Index">Pets</a></li>
            <li class="breadcrumb-item active">Add New</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Add New Pet</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pet.Name" class="form-label"></label>
                                <input asp-for="Pet.Name" class="form-control" placeholder="Enter pet name" />
                                <span asp-validation-for="Pet.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pet.Species" class="form-label"></label>
                                <select asp-for="Pet.Species" class="form-select">
                                    <option value="">Select species</option>
                                    <option value="Dog">Dog</option>
                                    <option value="Cat">Cat</option>
                                    <option value="Bird">Bird</option>
                                    <option value="Rabbit">Rabbit</option>
                                    <option value="Hamster">Hamster</option>
                                    <option value="Fish">Fish</option>
                                    <option value="Reptile">Reptile</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Pet.Species" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pet.Breed" class="form-label"></label>
                                <input asp-for="Pet.Breed" class="form-control" placeholder="Enter breed" />
                                <span asp-validation-for="Pet.Breed" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pet.DateOfBirth" class="form-label"></label>
                                <input asp-for="Pet.DateOfBirth" type="date" class="form-control" />
                                <span asp-validation-for="Pet.DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Pet.Color" class="form-label"></label>
                                <input asp-for="Pet.Color" class="form-control" placeholder="Color" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Pet.Weight" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Pet.Weight" type="number" step="0.1" class="form-control" placeholder="0.0" />
                                    <span class="input-group-text">kg</span>
                                </div>
                                <span asp-validation-for="Pet.Weight" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Pet.MicrochipNumber" class="form-label"></label>
                                <input asp-for="Pet.MicrochipNumber" class="form-control" placeholder="Microchip #" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Pet.OwnerId" class="form-label">Owner (Optional)</label>
                            <select asp-for="Pet.OwnerId" asp-items="Model.Owners" class="form-select">
                                <option value="">No owner yet (Available for adoption)</option>
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Save Pet
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}